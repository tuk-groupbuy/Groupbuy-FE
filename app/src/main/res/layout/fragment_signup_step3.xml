<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- 필요한 데이터 변수들을 여기에 추가 -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@color/blue_300">

        <ImageView
            android:id="@+id/ivCompleteIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_complete"
            android:contentDescription="회원가입 완료 아이콘"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvCompleteMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvCompleteMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.TUgether.Head1"
            android:textStyle="bold"
            android:textColor="@color/blue_400"
            android:text="회원가입 완료!"
            app:layout_constraintTop_toBottomOf="@id/ivCompleteIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

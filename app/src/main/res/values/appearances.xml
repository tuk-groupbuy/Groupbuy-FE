<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.TUgether" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.TUgether.Topbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.TUgether.Head1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.TUgether.Head2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.TUgether.Head3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.TUgether.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.TUgether.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_400</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.TUgether.Body3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_400</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.TUgether.Warning">
        <item name="textFillColor">@color/warning</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TUgether.Bold">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.TUgether.Bold.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>


    <style name="TextAppearance.TUgether.Bnv">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_400</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>


    <style name="JSG.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 Title 배경색 -->
        <item name="colorAccent">@color/transparency</item>
        <!-- 선택한 날짜 배경 색 -->
        <item name="colorControlActivated">@color/blue_300</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/blue_300</item>
        <!--Calender Background color -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/black_main</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/black_main</item>
        <!--day , month TextColor-->
        <item name="android:textColorPrimaryInverse">@color/black_main</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/black_main</item>
        <item name="android:textSize">0sp</item>
        <item name="cornerSize">16dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>
</resources>